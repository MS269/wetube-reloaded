mixin video(video)
  a.video-mixin(href=`/videos/${video.id}`)
    if video.thumbUrl.includes("http")
      .video-mixin__thumb(
        style=`background-image:url(${video.thumbUrl});background-size: cover;background-position: center;`
      )
    else
      .video-mixin__thumb(
        style=`background-image:url(${process.cwd() + '/src/views/' + video.thumbUrl});background-size: cover;background-position: center;`
      )
    .video-mixin__data
      span.video-mixin__title= video.title
      .video-mixin__meta
        //- prettier-ignore: because of a white space
        span #{ video.owner.name } â€¢ 
        //- prettier-ignore: because of a white space
        span #{ video.meta.views } 
          if video.meta.views !== 1
            | views
          else
            | view
