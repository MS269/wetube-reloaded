extends ../base
include ../mixins/video

block content
  .profile__data 
    if !loggedInUser.avatarUrl
      a(href="edit") Upload Profile
    else if loggedInUser.avatarUrl.includes("http")
      img.avatar(src=user.avatarUrl)
    else
      img.avatar(src='/' + user.avatarUrl)
    h3= user.name
  .video-grid
    each video in user.videos
      +video(video)
    else
      span.empty__message No videos found
